@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <style type="text/css">
    </style>
}
<!--Comment goes here -->

<main class="mn-inner inner-active-sidebar">
    <div class="middle-content" style="width: calc(100%-275px);">
        <div class="row no-m-b">
            <div class="col s12">
                <div class="page-title" style="font-size: 16px;">Operational Security</div>
            </div>
            <div class="col s7" style="">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Vehicles Entered Monthly</span>
                        <div>
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s5">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Latest Image - Location 1<span class="new badge green" data-badge-caption="ONLINE"><small></small></span></span>
                        <img src="~/images/gate1-1.png" style="height:253px;margin:auto;display:block;" class="responsive-img" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="row no-m-b">
            <div class="col s12">
                <div><span class="page-title" style="font-size: 16px;">Supply Management</span>@*<span> <a class="waves-effect waves-light btn indigo m-b-xs" style="float: right;" href="charts.html">Track Supplies</a></span>*@</div>
            </div>
            <div class="col s6" style="" id="first">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Supplies Ordered Monthly</span>
                        <div>
                            <canvas id="myChart1"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Supplies Used Last Month</span>
                        <div>
                            <canvas id="myChart2"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="inner-sidebar" style="width:275px;">
        <span class="inner-sidebar-title">Base Personnel</span>
        <div class="message-list">
            <div class="info-item message-item"><img class="circle" src="~/images/profile-image-2.png" alt=""><div class="message-info"><div class="message-author">Caleb Foster</div><small>3 hours ago</small></div></div>
            <div class="info-item message-item"><img class="circle" src="~/images/profile-image.png" alt=""><div class="message-info"><div class="message-author">Michael Peltier</div><small>4 hours ago</small></div></div>
            <div class="info-item message-item"><img class="circle" src="~/images/profile-image-2.png" alt=""><div class="message-info"><div class="message-author">Aaron Gonzales</div><small>2 days ago</small></div></div>
        </div>
        <span class="inner-sidebar-title">Edge Device Sync</span>
        <div class="stats-info">
            <ul>
                <li>TEA 1<div class="percent-info green-text right">32% <i class="material-icons">trending_up</i></div></li>
                <li>TEA 2<div class="percent-info red-text right">20% <i class="material-icons">trending_down</i></div></li>
                <li>TEA 3<div class="percent-info green-text right">18% <i class="material-icons">trending_up</i></div></li>
            </ul>
        </div>
        <span class="inner-sidebar-title">Upcoming Events<i class="material-icons">trending_up</i></span>
        <span class="info-item">Watch Change<span class="new badge">12</span></span>
        <div class="inner-sidebar-divider"></div>
        <span class="info-item">VIP Arrival</span>
        <div class="inner-sidebar-divider"></div>
        <span class="info-item disabled">No more events scheduled</span>
        <div class="inner-sidebar-divider"></div>
        <div class="sidebar-radar-chart"><canvas id="radar-chart" width="340" height="280" style="width: 170px; height: 140px;"></canvas></div>
    </div>
</main>

@section Scripts{
    <script>

        $(document).ready(function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            var chart = new Chart(ctx, {
                // The type of chart we want to create
                type: 'line',

                // The data for our dataset
                data: {
                    labels: ['April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                    datasets: [{
                        label: 'Gate 1',
                        fill: false,
                        borderColor: 'rgb(255, 99, 132)',
                        data: [15, 16, 13, 12, 16, 14, 12, 11, 11]
                    },
                    {
                        label: 'Gate 2',
                        fill: false,
                        borderColor: 'rgb(30,144,255)',
                        data: [10, 10, 5, 2, 20, 21, 24, 20, 21]
                    },

                    {
                        label: 'Gate 3',
                        fill: false,
                        borderColor: '#4B0082',
                        data: [8, 14, 19, 14, 7, 8, 12, 8, 8]
                    }
                    ]
                },
                // Configuration options go here
                options: {}
            });
            var ctx1 = document.getElementById('myChart1').getContext('2d');
            var chart1 = new Chart(ctx1, {
                // The type of chart we want to create
                type: 'bar',

                data: {
                    labels: ['April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                    datasets: [{
                        label: 'First-Aid Kits',
                        backgroundColor: 'rgb(30, 144, 255)',
                        borderColor: 'rgb(30, 144, 255)',
                        data: [0, 10, 5, 2, 20, 30, 45, 20, 12, 16]
                    },
                    {
                        label: 'Canned Goods',
                        backgroundColor: 'rgb(255, 99, 132)',
                        borderColor: 'rgb(255, 99, 132)',
                        data: [20, 10, 15, 23, 12, 21, 45, 23, 18]
                    },
                    ]
                },

                // Configuration options go here
                options: {}
            });

            var ctx2 = document.getElementById('myChart2').getContext('2d');
            var chart2 = new Chart(ctx2, {
                // The type of chart we want to create
                type: 'pie',

                data: {
                    labels: ["First-Aid Kits", "Canned Goods", "Water Bottles", "Backpacks"],
                    datasets: [{
                        label: "Population (millions)",
                        backgroundColor: ["#1E90FF", "#FF6384", "#4B0082", "#D2691E"],
                        data: [2478, 5267, 734, 784]
                    }
                    ]
                },
                // Configuration options go here
                options: {}
            });
        });

    </script>
}