@section Scripts{
    <script src="~/plugins/counter-up-master/jquery.counterup.min.js"></script>
    <script src="~/plugins/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/plugins/chart.js/chart.min.js"></script>
    <script src="~/plugins/curvedlines/curvedLines.js"></script>
    <script src="~/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/js/pages/dashboard.js"></script>
    <script src="~/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/pages/table-data.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#upload').click(function () {
                $('pdfpane').attr('style', 'display: block');
                $('textpane').attr('style', 'display: block');
            });
        });
    </script>
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Supply Management</div>
        </div>
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Upload PDF</span>
                    <p>Select a shipment registration form to be uploaded.</p>
                    <form action="#" class="p-v-xs">
                        <div class="file-field input-field">
                            <div class="btn teal lighten-1">
                                <span>File</span>
                                <input type="file" multiple="">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload one or more files">
                            </div>
                        </div>
                    </form>
                    <a id="upload" class="waves-effect waves-light btn">Upload</a>
                </div>
            </div>
        </div>
        <div class="col s6 m6 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Original PDF</span>
                    <embed id="pdfpane" src="https://baseopsstorage.blob.core.windows.net/pdfs/catering.pdf" height="400" style="width:100%;" />
                </div>
            </div>
        </div>
        <div class="col s6 m6 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Extracted Data</span>
                    <div id="textpane" style="overflow-y:scroll;height:334px;">
                        <div id="form-recognizer-preview">
                            <p>
                                ----------Key Value Pairs------<br />
                                SALESPERSON: Sullivan<br />
