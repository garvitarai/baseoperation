@section Scripts{
    <script src="~/plugins/counter-up-master/jquery.counterup.min.js"></script>
    <script src="~/plugins/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/plugins/chart.js/chart.min.js"></script>
    <script src="~/plugins/curvedlines/curvedLines.js"></script>
    <script src="~/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/pages/table-data.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#upload').unbind("click").click(function () {
            var file1 = $("#uploadpdf").get(0).files;

              var formData = new FormData();
              formData.append("upfile", file1[0]);
  
          $.ajax({
              url: "../SupplyManagement/UploadFile",
              type: "POST",
              contentType: false,
              data: formData,
              processData: false,
              dataType: "html",
              success: function (response) {
                  $('#formresponse').html(response);
              },
              failure: function (response) {
                    alert(response.responseText);
              },
              error: function (response) {
                   alert(response.responseText);
              }
            });
            });
        });
    </script>
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Supply Management</div>
        </div>
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Upload PDF</span>
                    <p>Select a shipment registration form to be uploaded.</p>
                    <form id="uploadform" action="/SupplyManagement/UploadFile" enctype="multipart/form-data" method="post" class="p-v-xs">
                        <div class="file-field input-field">
                            <div class="btn teal lighten-1">
                                <span>File</span>
                                <input manifest id="uploadpdf" type="file">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload one or more files">
                            </div>
                        </div>
                    </form>
                    <button id="upload" class="waves-effect waves-light btn">Upload</button>
                </div>
            </div>
        </div>
        <div id="formresponse">

        </div>
    </div>
</main>